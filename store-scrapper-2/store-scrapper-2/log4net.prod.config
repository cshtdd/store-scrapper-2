<log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%-5p %utcdate{yyyy-MM-dd HH:mm:ss} [%32logger{1}] %message%newline" />
        </layout>
    </appender>
    
    <root>
        <level value="WARN" />
        <appender-ref ref="Console" />
    </root>
</log4net>